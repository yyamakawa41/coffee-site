extends layout

block content
	if (user)
		#header.loggedin
			#header-inner.container
				#header-text-wrapper
					h1#header-text A better way to grind
					p1#header-sub-text Freshly roasted coffee beans delivered weekly to your door.
	if (!user)
		#header.anon
			#header-inner.container
				#header-text-wrapper
					h1#header-text A better way to grind
					p#header-sub-text Freshly roasted coffee beans delivered weekly to your door.
				#subscribe-box
					#sub-header Craft Coffee. Good Coffee.
					form(role='form', action="/login",method="post")
						.form-group
							label Enter Email Address
							input.form-control(type='text', name="username")
						.form-group
							label Password
							input.form-control(type='password', name="password")
						.cta-container
							button(type='submit' name='login') Login
							#or-button OR
							button(type='submit' name='getStarted' value='getStarted') Get Started
						//- <a href="/register">Get Started</a>

